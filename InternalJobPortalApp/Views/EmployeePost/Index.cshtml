@model IEnumerable<EmployeePostLibrary.EmployeePost>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@if (Request.IsAuthenticated)
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PostId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppliedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationStatus)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PostId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmpId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppliedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplicationStatus)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { empId = item.EmpId, postId = item.PostId }) |
                    @Html.ActionLink("Details", "Details", new { empId = item.EmpId, postId = item.PostId }) |
                    @Html.ActionLink("Details By Post Id", "DetailsbyPostId", new { postId = item.PostId }) |
                    @Html.ActionLink("Details By Employee Id", "DetailsbyEmpId", new { empId = item.EmpId }) |
                    @Html.ActionLink("Delete", "Delete", new { empId = item.EmpId, postId = item.PostId })
                </td>
            </tr>
        }

    </table>
}
else
{
    Response.Redirect("https://localhost:44344/Account/Login");
}

